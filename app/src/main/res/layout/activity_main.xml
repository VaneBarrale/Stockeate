<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/llLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logoredondeado" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llimagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imvRectanguloRegistrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/background" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="731dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/llRegistrarme"
            android:layout_width="match_parent"
            android:layout_height="418dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="45dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="215dp">

            <LinearLayout
                android:id="@+id/llhorizontalusuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/login_email_editText"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/usuario" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llhorizontalcontraseña"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_marginTop="10dp"

                android:orientation="horizontal">


                <EditText
                    android:id="@+id/login_password_editText"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="*******"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/show_pass_btn"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:alpha=".5"
                    android:padding="5dp"
                    android:src="@android:drawable/ic_menu_view" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/candado" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chkRecordarme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:checked="false"
                    android:text="Recordarme" />

                <TextView
                    android:id="@+id/txtOlvidasteTuContraseña"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnIngresar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INGRESAR"
                    app:backgroundTint="#2196F3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegistrate"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textRegistrate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Aún no te registraste? REGISTRATE ACA!"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imbGmail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imvRectanguloRegistrar">

                <ImageView
                    android:id="@+id/ic_googleLogin"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:translationX="128dp"
                    app:srcCompat="@drawable/iconogmail" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>